<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>VSPLogin</display-name>
  <welcome-file-list>
  	<welcome-file>index.jsp</welcome-file>
  	<welcome-file>admin/Admin.jsp</welcome-file>
  </welcome-file-list>
  <!-- <servlet-mapping>  
        <servlet-name>default</servlet-name>  
        <url-pattern>/j_security_check</url-pattern>  
    </servlet-mapping>  -->
  
  <session-config>
      <session-timeout>5</session-timeout>
  </session-config> 
  
<security-constraint>
  <web-resource-collection>
    <web-resource-name>VSP System</web-resource-name>
    <url-pattern>/*</url-pattern>
    <http-method>GET</http-method>
    <http-method>POST</http-method>
  </web-resource-collection>
  <auth-constraint>
    <role-name>trader</role-name>
  </auth-constraint>
</security-constraint>

<security-constraint>
  <web-resource-collection>
    <web-resource-name>VSP System</web-resource-name>
    <url-pattern>/admin/*</url-pattern>
    <http-method>GET</http-method>
    <http-method>POST</http-method>
  </web-resource-collection>
  <auth-constraint>
    <role-name>admin</role-name>
  </auth-constraint>
</security-constraint>

<security-constraint>
  <web-resource-collection>
    <web-resource-name>VSP System</web-resource-name>
    <url-pattern>/Logout.jsp</url-pattern>
    <http-method>GET</http-method>
    <http-method>POST</http-method>
  </web-resource-collection>
  <auth-constraint>
     <role-name>admin</role-name>
     <role-name>trader</role-name>
  </auth-constraint>
</security-constraint>

<security-constraint>
  <web-resource-collection>
    <web-resource-name>VSP System</web-resource-name>
    <url-pattern>/Signup.jsp</url-pattern>
    <http-method>GET</http-method>
    <http-method>POST</http-method>
  </web-resource-collection>
</security-constraint>

<security-constraint>
  <web-resource-collection>
    <web-resource-name>VSP System</web-resource-name>
    <url-pattern>/EnterUserName.jsp</url-pattern>
    <http-method>GET</http-method>
    <http-method>POST</http-method>
  </web-resource-collection>
</security-constraint>

<security-constraint>
  <web-resource-collection>
    <web-resource-name>VSP System</web-resource-name>
    <url-pattern>/EnterSecurityQuestion.jsp</url-pattern>
    <http-method>GET</http-method>
    <http-method>POST</http-method>
  </web-resource-collection>
</security-constraint>

<security-constraint>
  <web-resource-collection>
    <web-resource-name>VSP System</web-resource-name>
    <url-pattern>/ResetUserPassword.jsp</url-pattern>
    <url-pattern>/index.jsp</url-pattern>
    <url-pattern>/images/*</url-pattern>
    <url-pattern>/css/*</url-pattern>
    <http-method>GET</http-method>
    <http-method>POST</http-method>
  </web-resource-collection>
</security-constraint>

<login-config>
  <auth-method>FORM</auth-method>
  <realm-name>VSP System</realm-name>
  <form-login-config>
    <form-login-page>/LoginPage.jsp</form-login-page>
    <form-error-page>/LoginFailed.jsp</form-error-page>
  </form-login-config>
</login-config>

	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<role-name>trader</role-name>
	</security-role>
  
  <listener>
    <listener-class>vsp.dal.DatasourceListener</listener-class>
  </listener>
  
</web-app>